<div class="row mt-5">
    <div class="col-md-3 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Confirm</h1>
        <% include ./partials/messages %>
        <p class="text-center">Input your email and we'll re-send your confirmation email</p>
        <form action="/users/confirm" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Re-Send</button>
        </form>
      </div>
    </div>
</div>  